    "ConfigData": {
      "V": {
        "Nodes": [
          {
            "Name": "VS221",
            "Role": "Primary"
          },
          {
            "Name": "VS222",
            "Role": "Secondary"
          }
        ],
        "NonNodeData": {
          "ClusterName": "VCluster",
          "SqlDnsPrefix": "VSql",
          "DnsServer": "[variables('dc1NicIPAddress')]",
