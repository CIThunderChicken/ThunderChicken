{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
      "type": "string",
      "metadata": {
        "group": "Template settings",
        "description": "The name of the administrator account of the new VMs and Domain"
      },
      "defaultValue": ""
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "group": "Template settings",
        "description": "The password for the administrator account of the new VMs and Domain"
      }
    },
    "domainAdminUsername": {
      "type": "string",
      "metadata": {
        "group": "Template settings",
        "description": "The name of the administrator account of the new VMs and Domain"
      },
      "defaultValue": ""
    },
    "domainname": {
      "type": "string",
      "metadata": {
        "group": "Template settings",
        "description": ""
      }
    },
    "domainNetbiosName": {
      "type": "string",
      "metadata": {
        "group": "Template settings",
        "description": ""
      }
    },
    "domainNameDMZ": {
      "type": "string",
      "metadata": {
        "group": "Template settings",
        "description": ""
      }
    },
    "domainNetbiosNameDMZ": {
      "type": "string",
      "metadata": {
        "group": "Template settings",
        "description": ""
      }
    },
    "ArtifactsLocation": {
      "type": "string",
      "metadata": {
        "description": "The base URI where artifacts required by this template are located. When the template is deployed using the accompanying scripts, a private location in the subscription will be used and this value will be automatically generated."
      }
    },
    "ArtifactsLocationSasToken": {
      "type": "securestring",
      "metadata": {
        "group": "Template settings",
        "description": "The sasToken required to access ArtifactsLocation.  When the template is deployed using the accompanying scripts, a sasToken will be automatically generated."
      },
      "defaultValue": ""
    },   
    "template": {
      "type": "string",
      "defaultValue": "None",
      "allowedValues": [
        "None",
        "AD-DS",
        "DNS",
        "NPS",
        "SCOM",
        "SharedSQL",
        "FileServer",
        "DHCP",       
        "SharePoint",
        "OOS",
        "Exchange",
        "UEM",        
        "Skype"
      ],
      "metadata": {
        "group": "Lab Enviornment Template",
        "description": "Indicates Which enviornment to build"
      }
    }
  },
  "variables": {
    "templatePrefix": "DSC",
    "template": "[parameters('template')]",
    "location": "[resourceGroup().location]",
    "domainName": "[parameters('domainName')]",
    "domainNetbiosName": "[parameters('domainNetbiosName')]",
    "domainNameDMZ": "[parameters('domainNameDMZ')]",
    "domainNetbiosNameDMZ": "[parameters('domainNetbiosNameDMZ')]",
    "dc1NicIPAddress": "10.0.0.5",
    "dc2NicIPAddress": "10.0.1.5",
    "dc3NicIPAddress": "10.0.2.5",
    "RetryCount": 600,
    "RetryIntervalSec": 60,
    "moduleDSC": {
      "url": "[concat(parameters('ArtifactsLocation'),'/','dsc','/','ConfigureSCOM.ps1.zip')]",
      "script": "ConfigureSCOM.ps1",
      "function": "ConfigureSCOM"
    },
    "moduleDSCConfigData": {
      "url": "[concat(parameters('ArtifactsLocation'),'/','dsc','/','ConfigureSCOMData.psd1')]"
    },
    "templates": {
      "None": {
        "prefix": "blank",
        "servers": []
      },

      "SCOM": {
        "prefix": "scom",
        "servers": [
          {
            "hostname": "VS201",
            "size": "L",
            "subnet": "V",
            "ip": "10.0.0.10",
            "datadisks": [
              {
                "name": "Local Data",
                "diskSizeGB": 50,
                "letter": "D"
              }
            ]
          },
          {
            "hostname": "VS202",
            "size": "L",
            "subnet": "V",
            "ip": "10.0.0.11",
            "datadisks": [
              {
                "name": "Local Data",
                "diskSizeGB": 50,
                "letter": "D"
              }
            ]
          },
          {
            "hostname": "CS201",
            "size": "L",
            "subnet": "C",
            "ip": "10.0.2.12",
            "datadisks": [
              {
                "name": "Local Data",
                "diskSizeGB": 50,
                "letter": "D"
              }
            ]
          },
          {
            "hostname": "CS202",
            "size": "L",
            "subnet": "C",
            "ip": "10.0.2.13",
            "datadisks": [
              {
                "name": "Local Data",
                "diskSizeGB": 50,
                "letter": "D"
              }
            ]
          },
          {
            "hostname": "KS201",
            "size": "L",
            "subnet": "K",
            "ip": "10.0.1.14",
            "datadisks": [
              {
                "name": "Local Data",
                "diskSizeGB": 50,
                "letter": "D"
              }
            ]
          },
          {
            "hostname": "KS202",
            "size": "L",
            "subnet": "K",
            "ip": "10.0.1.15",
            "datadisks": [
              {
                "name": "Local Data",
                "diskSizeGB": 50,
                "letter": "D"
              }
            ]
          }
        ]
      }
    },
    "ConfigData": {
      "V": {
        "Nodes": [
          {
            "Name": "VS201",
            "Role": "Primary"
          },
          {
            "Name": "VS202",
            "Role": "Secondary"
          }
        ],
        "NonNodeData": {
          "SqlServerPrimary" : "VS221",
          "SqlServerSecondary" : "VS222",
          "SqlServerDNSAlias" : "VSql.domain.com",
          "SqlServerInstance" : "VSql.domain.com\\MSSQLSERVER",          
          "DwSqlServerInstance" :  "VSql.domain.com\\MSSQLSERVER",
          "SRSInstance" :  "VSql.domain.com\\MSSQLSERVER",
          "ManagementGroupName" : "VSCOM",
          "DnsPrefix": "VScom",
          "DnsServer": "[variables('dc1NicIPAddress')]"
        }
      },
      "K": {
        "Nodes": [
          {
            "Name": "KS201",
            "Role": "Primary"
          },
          {
            "Name": "KS202",
            "Role": "Secondary"
          }
        ],
        "NonNodeData": {
          "SqlServerPrimary" : "KS221",
          "SqlServerSecondary" : "KS222",
          "SqlServerDNSAlias" : "KSql.domain.com",
          "SqlServerInstance" : "KSql.domain.com\\MSSQLSERVER",          
          "DwSqlServerInstance" : "KSql.domain.com\\MSSQLSERVER",
          "SRSInstance" : "KSql.domain.com\\MSSQLSERVER",
          "ManagementGroupName" : "KSCOM",
          "DnsPrefix": "KScom",
          "DnsServer": "[variables('dc2NicIPAddress')]"
        }
      },
      "C": {
        "Nodes": [
          {
            "Name": "CS201",
            "Role": "Primary"
          },
          {
            "Name": "CS202",
            "Role": "Secondary"
          }
        ],
        "NonNodeData": {
          "SqlServerPrimary" : "CS221",
          "SqlServerSecondary" : "CS222",
          "SqlServerDNSAlias" : "CSql.domain.com",
          "SqlServerInstance" : "CSql.domain.com\\MSSQLSERVER",
          "DwSqlServerInstance" : "CSql.domain.com\\MSSQLSERVER",
          "SRSInstance" : "CSql.domain.com\\MSSQLSERVER",          
          "ManagementGroupName" : "CSCOM",
          "DnsPrefix": "CScom",
          "DnsServer": "[variables('dc3NicIPAddress')]"
        }
      },
      "Config": {
        "ShareFolder" : "\\\\VD201\\Share",
        "SCOMInstallSource" : "\\\\VD201\\Share\\SCOM",
        "SCOMInstallDestination" : "C:\\INSTALL\\SCOM2016",
        "SCOMSourcePath" : "\\SC 2016 RTM SCOM\\",
        "SQLSysClrTypesSource" : "\\SQLSysClrTypes.msi",
        "SysClrTypesProductID" : "68BA34E8-9B9D-4A74-83F0-7D366B532D75",
        "ReportViewerSource" : "\\ReportViewer.msi",
        "ReportViewerProductID" : "3ECE8FC7-7020-4756-A71C-C345D4725B77",
        "SCOMProducKey" : "",
        "ManagementGroupName" : "SCOM",
        "SQL2016ManagedPack" : "\\\\VD201\\Share\\SCOM\\SQLServer2016MP.msi",
        "SQL2016ManagedPackProductID" : "2CCCD49C-7B9A-4703-A8AE-F28CDE94C126",
        "InstanceName" : "MSSQLSERVER",
        "SqlServerAG" : "SCOMAG",
        "SQLAGBackup": "\\\\VD201\\SQLAGBackup",
        "ModulesPath" : "\\VD201\\Share\\SCOM\\Modules",
        "ManagementPacksPath" : "\\\\VD201\\Share\\SCOM\\ManagementPack"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('templates')[variables('template')].servers[copyIndex()].hostname,'/Microsoft.Powershell.DSC')]",
      "apiVersion": "2015-05-01-preview",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "vmExtensionLoop",
        "count": "[length(variables('templates')[variables('template')].servers)]"
      },
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.20",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "configuration": {
            "url": "[variables('moduleDSC').url]",
            "script": "[variables('moduleDSC').script]",
            "function": "[variables('moduleDSC').function]"
          },
          "configurationArguments": {
            "DomainName": "[variables('domainName')]",
            "Nodes": "[string(variables('ConfigData')[variables('templates')[variables('template')].servers[copyIndex()].subnet])]",
            "Config": "[string(variables('ConfigData').Config)]",
            "ServerName": "[string(variables('templates')[variables('template')].servers[copyIndex()].hostname)]",
            "ServerIP": "[string(variables('templates')[variables('template')].servers[copyIndex()].ip)]",
            "RetryCount": "[variables('RetryCount')]",
            "RetryIntervalSec": "[variables('RetryIntervalSec')]"
          }
        },
        "protectedSettings": {
          "configurationUrlSasToken": "[parameters('ArtifactsLocationSasToken')]",
          "configurationArguments": {
            "InstallCredential": {
              "UserName": "[concat(variables('domainNetbiosName'), '\\', parameters('adminUserName'))]",
              "Password": "[parameters('adminPassword')]"
            },
            "DomainAdminCredential": {
              "UserName": "[concat(variables('domainNetbiosName'), '\\', parameters('domainAdminUsername'))]",
              "Password": "[parameters('adminPassword')]"
            }
          }
        }
      }
    }
  ],
  "outputs": {}
}